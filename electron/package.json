{
  "name": "azimuth-viewer",
  "productName": "Azimuth IMGX-viewer",
  "description": "Azimuth evidence viewer",
  "author": "korgun@tbdd.ru",
  "license": "Apache-2.0",
  "version": "0.0.0",
  "main": "index.js",
  "devDependencies": {
    "electron": "^1.8.3",
    "electron-builder": "^20.5.1"
  },
  "build": {
    "appId": "ru.tbdd.viewer",
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [ "x64" ]
        }
      ],
      "icon": "assets/tbdd.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [ "ia32" ]
        }
      ],
      "fileAssociations": [
        {
          "ext": [
            "imgx",
            "imgf",
            "imgv"
          ]
        }
      ],
      "icon": "assets/tbdd.ico"
    },
    "nsis": {
      "oneClick": false
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -lw"
  }
}